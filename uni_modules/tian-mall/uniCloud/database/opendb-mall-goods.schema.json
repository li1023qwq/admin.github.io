{
	"bsonType": "object",
	"required": ["name"],
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（商品 ID），系统自动生成"
		},
		"category_id": {
			"bsonType": "array",
			"description": "分类 id，参考`opendb-mall-categories`表",
			"foreignKey": "opendb-mall-categories._id"
		},
		"goods_sn": {
			"bsonType": "string",
			"defaultValue": "",
			"description": "商品的唯一货号",
			"title": "货号",
			"trim": "both"
		},
		"name": {
			"bsonType": "string",
			"description": "商品名称",
			"title": "名称",
			"trim": "both"
		},
		"price": {
			"bsonType": "int",
			"description": "价格，以分为单位，避免浮点计算的精度问题"
		},
		"market_price": {
			"bsonType": "int",
			"description": "市场价，以分为单位，避免浮点计算的精度问题"
		},
		"keywords": {
			"bsonType": "string",
			"description": "商品关键字，为搜索引擎收录使用",
			"title": "关键字",
			"trim": "both"
		},
		"goods_desc": {
			"bsonType": "array",
			"description": "图片\/文字数组,可以做到图文混排",
			"title": "详细描述",
			"trim": "both"
		},
		"goods_summary": {
			"bsonType": "string",
			"title": "摘要",
			"trim": "both"
		},
		"goods_thumb": {
			"bsonType": "string",
			"description": "商品缩略图，用于在列表或搜索结果中预览显示",
			"title": "缩略图地址",
			"pattern": "^(http:\/\/|https:\/\/|\/|.\/|@\/)\\S",
			"trim": "both"
		},
		"goods_banner": {
			"bsonType": "file",
			"fileMediaType": "image",
			"title": "列表大图",
			"description": "图片文件信息，包括文件名、url等"
		},
		"goods_banner_imgs": {
			"bsonType": "array",
			"description": "商品详情页的banner图地址"
		},
		"offline_time": {
			"bsonType": "timestamp",
			"description": "为空表示不下架",
			"title": "下架时间"
		},
		"shop_id": {
			"bsonType": "string",
			"title": "店铺",
			"foreignKey": "tian-mall-shops._id"
		},
		"remain_count": {
			"bsonType": "int",
			"defaultValue": 0,
			"description": "库存数量",
			"title": "库存数量"
		},
		"month_sell_count": {
			"bsonType": "int",
			"defaultValue": 0,
			"description": "月销量"
		},
		"visite_count": {
			"bsonType": "int",
			"defaultValue": 0,
			"description": "浏览量"
		},
		"total_sell_count": {
			"bsonType": "int",
			"defaultValue": 0,
			"description": "总销量"
		},
		"group_buying": {
			"bsonType": "int",
			"title": "拼团",
			"description": "拼团购买，0表示支持"
		},
		"group_buying_discount": {
			"bsonType": "int",
			"title": "拼团优惠",
			"description": "拼团优惠，0表示没优惠"
		},
		"comment_count": {
			"bsonType": "int",
			"defaultValue": 0,
			"description": "累计评论数"
		},
		"is_real": {
			"bsonType": "bool",
			"defaultValue": true,
			"description": "是否实物",
			"title": "是否为实物"
		},
		"city_ids": {
			"bsonType": "array",
			"description": "为空表示全国",
			"title": "城市"
		},
		"is_on_sale": {
			"bsonType": "bool",
			"defaultValue": true,
			"description": "是否上架销售",
			"title": "是否上架"
		},
		"is_alone_sale": {
			"bsonType": "bool",
			"defaultValue": true,
			"description": "是否能单独销售；如果不能单独销售，则只能作为某商品的配件或者赠品销售"
		},
		"is_best": {
			"bsonType": "bool",
			"defaultValue": false,
			"description": "是否精品"
		},
		"is_new": {
			"bsonType": "bool",
			"defaultValue": false,
			"description": "是否新品",
			"title": "是否新品"
		},
		"is_hot": {
			"bsonType": "bool",
			"defaultValue": false,
			"description": "是否热销"
		},
		"is_vip": {
			"bsonType": "bool",
			"defaultValue": false,
			"description": "是否会员商品"
		},
		"add_date": {
			"bsonType": "timestamp",
			"description": "上架时间",
			"defaultValue": {
				"$env": "now"
			}
		},
		"last_modify_date": {
			"bsonType": "timestamp",
			"description": "最后修改时间",
			"defaultValue": {
				"$env": "now"
			}
		},
		"last_update_sell_date": {
			"bsonType": "timestamp",
			"title": "最后更新库存时间"
		},
		"sku_name": {
			"bsonType": "array",
			"description": "多规格名称"
		},
		"seller_note": {
			"bsonType": "string",
			"description": "商家备注，仅商家可见",
			"trim": "both"
		},
		"use_score_rate": {
			"bsonType": "double",
			"title": "使用积分比例"
		},
		"use_score": {
			"bsonType": "int",
			"title": "使用固定积分"
		},
		"rebate_score_rate": {
			"bsonType": "string",
			"title": "积分返佣",
			"description": "积分返佣，多级别用英文逗号隔开",
			"trim": "both"
		},
		"rebate_money_rate": {
			"bsonType": "string",
			"title": "现金返佣",
			"description": "现金返佣，多级别用英文逗号隔开",
			"trim": "both"
		},
		"miaosha": {
			"bsonType": "object",
			"title": "秒杀临时数据"
		}
	}
}
